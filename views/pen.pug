block content
  - let pens = results
  h1= title
  - let create = `dispatch(\"/pen/create\")`
  button.btn(class="btn-info", onclick=create) Add new pen

  div(class="container-fluid")
    div(class="row m-1")
      each pen in pens
        - let destination = `dispatch(\"/pen/update?id=${pen._id}\")`
        - let detail = `dispatch(\"/pen/detail/?id=${pen._id}")`
        - let deletepen = `dispatch(\"/pen/delete/?id=${pen._id}")`      
        div(class="row-sm-2", class="m-1") 
          | #{pen.pen_type} (#{pen.pencost}) is #{pen.pensize}
          button.btn(class="btn-primary ml-1", onclick=destination) Update
          button.btn(class="btn-success", onclick=detail) Details
          button.btn(class="btn-dark", onclick=deletepen) Delete

  script.
    function dispatch(path){
      window.location.href = path
    }   
